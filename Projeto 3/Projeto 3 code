// C++ code
//

void setup()
{
  pinMode(6, INPUT);
  pinMode(13, OUTPUT);
  pinMode(3, OUTPUT);
}

void loop()
{
  int movimento = digitalRead(6);
  
  if (movimento){
    
    digitalWrite(13, HIGH);
    digitalWrite(3, HIGH);
    delay(2000);
    
  } else{
    digitalWrite(13, LOW);
    digitalWrite(3, LOW);
    
  
  }
  
}
